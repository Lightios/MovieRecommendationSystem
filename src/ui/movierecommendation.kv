MDScreen:
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 40

#        MDTextField:
#            id: user_id_input
#            mode: "filled"
#
#            MDTextFieldHelperText:
#                text: "Enter User ID (or leave blank for new user)"
#                mode: "persistent"

        MDTextField:
            id: title_input
            mode: "filled"

            MDTextFieldHelperText:
                text: "Search for a movie by title"
                mode: "persistent"

        MDButton:
            id: search_button
            on_press: app.search_movies()
            MDButtonText:
                text: 'Search Movies by title'

        MDDropDownItem:
            id: movie_dropdown
            pos_hint: {'center_x': 0.5}
            on_press: app.search_movies()
            MDDropDownItemText:
                text: 'Select a Movie'
                id: dropdown_text

        MDTextField:
            id: rating_input
            mode: "filled"
            size_hint_x: 0.2

            MDTextFieldHelperText:
                text: "Enter a rating between 1 and 5"
                mode: "persistent"

        MDButton:
            id: submit_button
            on_press: app.submit_rating()

            MDButtonText:
                text: 'Submit Rating'

        MDButton:
            id: recommend_button
            on_press: app.show_recommendations()
            MDButtonText:
                text: 'Get Recommendations'

        MDButton:
            id: predict_button
            on_press: app.predict_rating()
            MDButtonText:
                text: 'Predict Movie Rating'

        MDLabel:
            id: result_label
            size_hint_y: None