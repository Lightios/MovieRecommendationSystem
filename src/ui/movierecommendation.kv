MDScreen:
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        pos_hint: {'x': 0, 'center_y': 0.5}
        size_hint: 0.8, 1
        orientation: 'vertical'
        padding: 10
        spacing: 40

        MDTextField:
            id: title_input
            mode: "filled"

            MDTextFieldHelperText:
                text: "Search for a movie by title"
                mode: "persistent"

        MDButton:
            id: search_button
            on_press: app.search_movies()
            MDButtonText:
                text: 'Search Movies by title'

        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDStackLayout:
                id: movies_stack
                padding: 10
                spacing: 10
                adaptive_height: True
                pos_hint: {'x': 0.1}
                size_hint: 1, None
                height: self.minimum_height

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.9, 'center_y': 0.5}
        size_hint: 0.2, 1
        padding: 10
        spacing: 40

        MDTextField:
            id: rating_input
            mode: "filled"
            size_hint_x: 0.2

            MDTextFieldHelperText:
                text: "Enter a rating between 1 and 5"
                mode: "persistent"

        MDButton:
            id: submit_button
            on_press: app.submit_rating()

            MDButtonText:
                text: 'Submit Rating'

        MDButton:
            id: recommend_button
            on_press: app.show_recommendations()
            MDButtonText:
                text: 'Get Recommendations'

        MDButton:
            id: predict_button
            on_press: app.predict_rating()
            MDButtonText:
                text: 'Predict Movie Rating'
        MDLabel:
            id: selected_movie_label
            text: app.selected_movie

        MDLabel:
            id: rating_label
            text: ""

        MDLabel:
            id: result_label
            size_hint_y: None