MDScreen:
    md_bg_color: self.theme_cls.backgroundColor

    MDBoxLayout:
        pos_hint: {'x': 0, 'center_y': 0.5}
        size_hint: 0.8, 1
        orientation: 'vertical'
        padding: 10
        spacing: 40

        MDTextField:
            id: title_input
            mode: "filled"

            MDTextFieldHelperText:
                text: "Type movie's title here"
                mode: "persistent"

            MDTextFieldLeadingIcon:
                icon: "magnify"

        MDButton:
            id: search_button
            on_press: app.search_movies()
            MDButtonText:
                text: 'Search Movies by title'

        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDStackLayout:
                id: movies_stack
                padding: 10
                spacing: 10
                adaptive_height: True
                pos_hint: {'x': 0.1}
                size_hint: 1, None
                height: self.minimum_height

    MDTextField:
        id: rating_input
        mode: "filled"
        size_hint_x: 0.15
        pos_hint: {'center_x': 0.9, 'center_y': 0.8}

        MDTextFieldHelperText:
            text: "Enter a rating between 1 and 5"
            mode: "persistent"

    MDButton:
        id: submit_button
        on_press: app.submit_rating()
        pos_hint: {'center_x': 0.9, 'center_y': 0.7}

        MDButtonText:
            text: 'Submit Rating'

    MDButton:
        id: recommend_button
        on_press: app.show_recommendations()
        pos_hint: {'center_x': 0.9, 'center_y': 0.6}

        MDButtonText:
            text: 'Get Recommendations'

    MDButton:
        id: predict_button
        on_press: app.predict_rating()
        pos_hint: {'center_x': 0.9, 'center_y': 0.5}
        MDButtonText:
            text: 'Predict Movie Rating'

    MDLabel:
        text: "Selected Movie:"
        font_size: 30
        pos_hint: {'center_x': 0.9, 'center_y': 0.4}
        size_hint_x: 0.2

    MDLabel:
        id: selected_movie_label
        text: app.selected_movie
        pos_hint: {'center_x': 0.9, 'center_y': 0.3}
        size_hint_x: 0.2

    MDLabel:
        id: rating_label
        text: ""
        pos_hint: {'center_x': 0.9, 'center_y': 0.2}
        size_hint_x: 0.2

    MDLabel:
        id: result_label
        size_hint_y: None
        size_hint_x: 0.2