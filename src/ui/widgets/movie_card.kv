<MovieCard>:
    padding: "4dp"
    size_hint: None, None
    size: "240dp", "240dp"
    theme_bg_color: "Custom"
    md_bg_color: root.card_color
    on_release: root.on_release()

    MDRelativeLayout:

        MDLabel:
            pos_hint: {"center_x": .5, "center_y": .7}
            text: root.movie_title
            id: title_label
            pos: 0, 150
            font_size: 20
            color: 0, 0, 0, 1
            halign: 'center'
            valign: 'middle'
            text_size: 200, 50
            padding: 5, 5

        MDLabel:
            pos_hint: {"center_x": .5, "center_y": .1}
            id: rating_label
            pos: 0, 150
            font_size: 15
            color: 0, 0, 0, 1
            halign: 'center'
            valign: 'middle'
            text_size: 200, 50
            padding: 5, 5